<% layout('layouts/boilerplate') %>


  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
      <form action="/campgrounds/<%=camp.id %>?_method=PUT" method="post" novalidate class="validated-form"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title:</label>
          <input class="form-control" type="text" name="campground[title]" id="title" value="<%=camp.title %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location:</label>
          <input class="form-control" type="text" name="campground[location]" id="location" value="<%=camp.location %>"
            required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price:</label>
          <div class="input-group ">
            <span class="input-group-text" id="price-label">$</span>
            <input id="price" type="text" class="form-control" aria-label="price" placeholder="0.00"
              name="campground[price]" value="<%=camp.price %>" required>

          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description:</label>
          <textarea class="form-control" type="tex" name="campground[description]"
            id="description"> <%=camp.description %> required></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Add Images</label>
          <input class="form-control" type="file" id="image" name="image" multiple>
        </div>
        <div class="mb-3">
          <% camp.images.forEach((img, i)=>{ %>
            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
            <div class="form-check-inline">
              <input type="checkbox" name="deleteImages[]" id="image-<%=i %>" value="<%=img.filename %>">
              <label for="delete">Delete?</label>
            </div>
            <% }) %>
        </div>

        <div class="mb-3">
          <button class="btn btn-primary">Update Campground</button>
        </div>

      </form>
      <a href="/campgrounds/<%=camp.id  %>">Back to campgrounds</a>
    </div>

  </div>