<% layout('layouts/boilerplate') %>
  <div id="map" style="width:100%; height:500px"></div>
  <h1>All Campgrounds</h1>
  <ul>
    <% for(let camp of campgrounds) {%>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <% if(camp.images[0]){ %>
            <img src="<%=camp.images[0].url  %>" alt="" class="img-fluid">
            <% } else{ %>
                <img src="https://res.cloudinary.com/dzpdeyqbr/image/upload/v1716156226/YelpCamp/tcpoknn05g24iqx7fuld.jpg" alt="">
              <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= camp.title %>
              </h5>
              <p class="card-text">
                <%=camp.description %>
              </p>
              <p class="card-text text-secondary">
                <%=camp.location %>
              </p>
              <a href="/campgrounds/<%=camp.id  %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
  </ul>

  <a href="/campgrounds/new">New campground</a>
  <script>
    const mtoken = '<%-process.env.MAPBOX_TOKEN%>'
    const campground = {features: <%-JSON.stringify(campgrounds) %>}
  </script>
  <script src="js/clusterMap.js"></script>